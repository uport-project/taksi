{
  "version": "1.0.0",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "changelog": {
    "repo": "uport-project/taksi",
    "cacheDir": ".changelog"
  },
  "command": {
    "publish": {
      "allowBranch": [
        "master",
        "beta"
      ],
      "conventionalCommits": true,
      "gitRemote": "origin",
      "message": "chore(release): %s [skip ci]"
    },
    "version": {
      "allowBranch": [
        "beta"
      ],
      "conventionalCommits": true,
      "gitRemote": "origin",
      "message": "chore(beta-release): %s [skip ci]"
    }
  },
  "useWorkspaces": true
}
